{
  "swagger": "2.0",
  "info": {
    "version": "V1",
    "title": " Fundoo-App",
    "description": "CLI App API"
  },
  "host": "localhost:5000",
  "basePath": "/api/v1",
  "tags": [
    {
      "name": "CLI",
      "description": "Creating user......."
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/users": {
      "post": {
        "tags": ["Users Part"],
        "description": "create profile...",
        "parameters": [
          {
            "name": "Create name",
            "in": "body",
            "description": "Create",
            "schema": {
              "$ref": "#/definitions/User"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "New user is created"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/login": {
      "post": {
        "tags": ["Users Part"],
        "description": "login name...",
        "parameters": [
          {
            "name": "login user",
            "in": "body",
            "description": "login",
            "schema": {
              "$ref": "#/definitions/login"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "User is login successfull"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/forget": {
      "post": {
        "tags": ["Users Part"],
        "description": "Forget Password...",
        "parameters": [
          {
            "name": "Forget Password",
            "in": "body",
            "description": "Password is forgotten",
            "schema": {
              "$ref": "#/definitions/forget"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Email sent successfull"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/reset": {
      "post": {
        "tags": ["Users Part"],
        "description": "Reset Password...",
        "parameters": [
          {
            "name": "Reset Password",
            "in": "body",
            "description": "Reset your password",
            "schema": {
              "$ref": "#/definitions/reset"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Password Reset Successfull"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "BearerAuth": {
              "$ref": "#/securityDefinitions"
            }
          }
        ]
      }
    },

    "/notes": {
      "post": {
        "tags": ["Notes part"],
        "description": "Create new Note...",
        "parameters": [
          {
            "name": "Note",
            "in": "body",
            "description": "Create Note",
            "schema": {
              "$ref": "#/definitions/note"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "201": {
            "description": "Note Created Successfull"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
