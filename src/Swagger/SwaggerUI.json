        "security": [
          {
            "BearerAuth": {
              "$ref": "#/securityDefinitions"
            }
          }
        ]
      },
      "get": {
        "tags": ["Notes part"],
        "description": "Get All Note...",
        "parameters": [
          {
            "name": "Note",
