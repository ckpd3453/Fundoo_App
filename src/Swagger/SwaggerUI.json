    "/notes/trash/{id}": {
      "put": {
        "tags": ["Notes part"],
        "description": "Trash or UnTrash Note by ID...",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Note updated Successfull"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "BearerAuth": {
              "$ref": "#/securityDefinitions"
            }
          }
        ]
      }
    },
    "/notes/archive/{id}": {
      "put": {
        "tags": ["Notes part"],
        "description": "Archive or UnArchive Note by ID...",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Note updated Successfull"
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "BearerAuth": {
              "$ref": "#/securityDefinitions"
            }
          }
        ]
      }
    }
